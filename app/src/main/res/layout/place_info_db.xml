<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/place_icon_db"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/place_icon_attribute" />

    <TextView
        android:id="@+id/place_name_db"
        android:layout_toRightOf="@id/place_icon_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:text="Name of the place" />

    <TextView
        android:id="@+id/place_price_level_label_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/place_icon_db"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:text="Класс:"
        />

    <TextView
        android:id="@+id/place_price_level_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/place_icon_db"
        android:layout_toRightOf="@id/place_price_level_label_db"
        android:layout_toEndOf="@id/place_price_level_label_db"
        android:layout_marginBottom="5dp"
        android:text="Expensive"/>

    <TextView
        android:id="@+id/place_address_label_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@id/place_price_level_label_db"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:paddingBottom="20dp"
        android:text="Адрес:"
        />

    <TextView
        android:id="@+id/place_address_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingBottom="20dp"
        android:layout_below="@id/place_price_level_db"
        android:layout_toRightOf="@id/place_address_label_db"
        android:layout_toEndOf="@id/place_address_label_db"
        android:text="ул. Космонавтов, 1"/>

</RelativeLayout>